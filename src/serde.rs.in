/// Configuration for the `RoutingAppender`.
#[derive(Deserialize)]
#[serde(deny_unknown_fields)]
pub struct RoutingAppenderConfig {
    router: route::RouterConfig,
    #[serde(default)]
    cache: CacheConfig,
}

#[derive(Deserialize)]
#[serde(deny_unknown_fields)]
struct CacheConfig {
    #[serde(deserialize_with = "de_duration", default = "idle_time_default")]
    idle_timeout: Duration,
}
